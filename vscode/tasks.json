{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make debug",
            "type": "process",
            "command": "make",
            "args": [
                "DEBUG=1"
            ],
            "problemMatcher": []
        },
        {
            "label": "make release",
            "type": "process",
            "command": "make",
            "args": [
                "DEBUG=0"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "process",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "isBackground": true,
            "command": "/home/chickpea/Documents/DS/desmume-master/desmume/src/frontend/posix/gtk2/desmume",
            "args": [
                "${workspaceFolder}/${workspaceFolderBasename}.nds"
            ],
            "presentation": {
                "clear": true,
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "gdb-debug",
            "type": "shell",
            "dependsOn": [
                "make debug"
            ],
            "isBackground": true,
            "command": "/home/chickpea/Documents/DS/desmume-master/desmume/src/frontend/posix/gtk2/desmume",
            "args": [
                "--arm9gdb",
                "2009",
                "--arm7gdb",
                "2007",
                "${workspaceFolder}/${workspaceFolderBasename}.nds"
            ],
            "presentation": {
                "clear": true,
                "reveal": "always"
            },
            "problemMatcher": [
                {
                    "pattern": [
                      {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                      }
                    ],
                    "background": {
                      "activeOnStart": true,
                      "beginsPattern": ".",
                      "endsPattern": ".",
                    }
                  }
            ]
        },
        {
            "label": "stop-emulation",
            "type": "shell",
            "command": "kill",
            "args": [
                "-9",
                "$(ps",
                "-e",
                "|","awk",
                "/desmume/ {print $1}",
                ")"
            ],
            "problemMatcher": []
        }
    ]
}